

<%= link_to("<< Back to List", events_path, :class => 'btn btn-xs btn-success') %>


<h2 align="center">Title: <%= @event.title %></h2>

<div class="well col-xs-8 col-xs-offset-2 show-event">
 <h4 class="center"><strong>Description:</strong></h4>
 <hr>
 <%= simple_format(@event.description) %>

Location: <%= @event.location %><br>
Date: <%= @event.date %><br>
Created by: <%= link_to "#{@event.user.username}", user_path(@event.user.id) %> <br>

<% if current_user %>
    <% if @current_attendee %>
        <%= button_to "Unattend", event_event_attendance_path(@event, @current_attendee), method: :delete, class: "btn btn-danger" %>
    <% else %>
        <%= button_to "Attend", event_event_attendances_path(@event), class: "btn btn-success" %>
    <% end %>
<% end %>

<p><%= pluralize(@attendees.size, 'Attendee') %></p>
    <% if @attendees.any? %>
        <h3>Attendees</h3>
            <ul>
                <% @attendees.each do |user| %>
                    <li>
                        <%= link_to user.username, user %>
                    </li>
                <% end %>
            </ul>
    <% end %>
</div>

<% if logged_in? && current_user == @event.user %>

    <div class="show-event">
        <%= link_to  "Edit this event", edit_event_path(@event), class: "btn btn-xs btn-primary" %>
        <%= link_to  "Delete this event", event_path(@event), method: :destroy, data: {confirm: "Are you sure you want to delete this event?"}, class: "btn btn-xs btn-danger" %>
    </div>
<% end %>

