<h1 align="center">Welcome to <%= @user.username %>'s page</h1>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center img-center">
    <%= gravatar_for @user, size: 150 %>
  
  </div>
</div>

<h4 align="center"><%= @user.username %>'s events</h4>
<div align="center">
  <%= will_paginate @user_events %>
</div>

<% if @attended_events.any? %>
  <h3>Attend Events</h3>
    <ul>
      <% @attended_events.each do |event| %>
        <li>
          <%= link_to event.title, event %>
        </li>
      <% end %>
    </ul>
<% end %>
<%= render 'events/event', obj: @user_events %>